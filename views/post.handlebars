<div class="postsClass">
    <div id="bp-border">
        <div id="blog-post" class="navbar navbar-expand-lg p-1">
            <h2 class="p-3">{{post.title}}</h2>
            <ul class="navbar-nav ms-auto p-3">
                <li>Created: {{post.createdAt}} |</li>
                <li>| Author: {{post.author}}</li>
            </ul>
        </div>
            <p class="p-3">
                {{post.postText}}
            </p>
    </div>
</div>

{{#if logged_in}}
<script src="./js/logout.js"></script>
{{else}}
<script src="./js/login.js"></script>
{{/if}}