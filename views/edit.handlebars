<h1>Update Current Post</h1>
<div class="postsClass">
    <div id="bp-border">
        <p class="p-3">
            <h2>Title</h2>
            <input class="p-3 w-100" value={{posts.title}}></input>
            <h2>Content</h2>
            <input type="text" class="w-100 p-3" value={{posts.postText}}></input>
        </p>
    </div>
    <ul class="navbar-nav ms-auto p-3">
        <li>Created: {{format_date posts.createdAt}}</li>
        <li>Updated: {{format_date posts.updatedAt}}</li>
        <li>Author: {{posts.author}}</li>
    </ul>
    <button>UPDATE</button>
    <button>DELETE</button>
</div>

<script src="./js/logout.js"></script>